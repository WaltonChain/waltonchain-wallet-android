<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->
    <style name="Title1">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">?TitleColor</item>
    </style>

    <style name="Title2">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?TitleColor</item>
    </style>

    <style name="Title2R">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Title3">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?TitleColor</item>
    </style>

    <style name="Headline1">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Headline2">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subhead1">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Subhead2">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CaptionSB">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Micro">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLabel">
        <item name="android:background">@drawable/label_background</item>
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>
