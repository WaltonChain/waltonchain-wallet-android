<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemWrapper"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/clickable_background_color_lawrence">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="top"
        android:background="@color/steel_20" />

    <TextView
        android:id="@+id/itemTitle"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/CoinOption_bip44"
        android:textColor="?TextColorBarsToDark"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/itemSubtitle"
        style="@style/Subhead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/CoinOption_bip44_Subtitle"
        android:textColor="@color/grey" />

    <ImageView
        android:id="@+id/checkMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:src="@drawable/ic_checkmark"
        android:tint="?ColorJacob"
        android:visibility="invisible"
        tools:visibility="visible" />

    <View
        android:id="@+id/bottomBorderView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/steel_20" />
</FrameLayout>
